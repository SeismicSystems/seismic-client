{
  "extends": "./tsconfig.json",
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "paths": {
      "@sviem/*": ["../seismic-viem/src/*"],
      "@sviem-tests/*": ["./src/*"]
    },
    "noEmit": false,
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist/_types",
    "tsBuildInfoFile": "./dist/_types/.tsbuildinfo",
    "rootDir": "../..",
    "baseUrl": "."
  }
}
