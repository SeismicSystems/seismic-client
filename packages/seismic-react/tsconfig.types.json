{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist/_types",
    "tsBuildInfoFile": "./dist/_types/.tsbuildinfo",
    "baseUrl": ".",
    "rootDir": "../..",
    "paths": {
      "@sviem/*": ["../seismic-viem/src/*"],
      "@sreact/*": ["./src/*"]
    }
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx", "../seismic-viem/src/**/*.ts"],
  "references": [{ "path": "../seismic-viem/tsconfig.types.json" }]
}
