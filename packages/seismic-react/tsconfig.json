      "@sreact/*": ["./src/*"],
      "seismic-viem": ["../seismic-viem/src"]
    },
    "baseUrl": ".",
    "rootDir": "../..",
    "tsBuildInfoFile": "./dist/.tsbuildinfo"
  }
}
