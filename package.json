{
  "name": "seismic-client",
  "private": true,
  "workspaces": [
    "packages/**",
    "tests/**"
  ],
  "scripts": {
    "build:actions": "bun run --cwd packages/actions build",
    "typecheck": "bun run --cwd packages/actions typecheck",
    "lint": "eslint packages/actions tests/actions",
    "clean": "bun run --cwd packages/actions clean",
    "test:seismictx:anvil": "CHAIN=anvil bun test --cwd tests/actions contract",
    "test:seismictx:devnet": "CHAIN=devnet bun test --cwd tests/actions contract"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^5.2.1",
    "@types/bun": "^1.1.14",
    "@typescript-eslint/eslint-plugin": "^8.19.0",
    "@typescript-eslint/parser": "^8.19.0",
    "bun-types": "^1.1.42",
    "dotenv": "^16.4.7",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "terminate": "^2.8.0"
  },
  "peerDependencies": {
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "noble": "^1.9.1"
  }
}
